{
  "manifest_version": 2,
  "name": "Test Pilot Dev Add-on",
  "author": "Les Orchard <me@lmorchard.com>",
  "applications": {
    "gecko": {
      "id": "@testpilot-dev-addon"
    }
  },
  "version": "0.0.1",
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "64": "icons/icon-64.png",
    "96": "icons/icon-96.png"
  },
  "permissions": [
    "notifications",
    "storage",
    "tabs"
  ],
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "browser_action": {
    "default_title": "Firefox Test Pilot Dev Add-on",
    "browser_style": false,
    "default_icon": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png"
    }
  }
}

